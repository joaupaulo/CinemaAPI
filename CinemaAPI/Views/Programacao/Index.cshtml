            <td>
                @Html.DisplayFor(modelItem => item.DataLancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmeHoje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilmeSemana)
            </td>
